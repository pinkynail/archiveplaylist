<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Archive Playlist - Защита</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container mt-5">
    <div class="card p-4 shadow-sm" style="max-width: 400px; margin: 0 auto;">
      <h2 class="text-center mb-4">Введите код доступа</h2>
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      <form id="protect-form" method="POST" action="/protect">
        <div class="mb-3">
          <input type="text" name="code" class="form-control" placeholder="Введите 4-значный код" maxlength="4" required>
        </div>
        <button type="submit" class="btn btn-custom w-100">Подтвердить</button>
      </form>
    </div>
  </div>

  <script>
    document.getElementById("protect-form").addEventListener("submit", async (e) => {
      e.preventDefault(); // Предотвращаем стандартную отправку для отладки
      const form = e.target;
      const formData = new FormData(form);
      console.log("Form submitting with data:", Object.fromEntries(formData));

      try {
        const response = await fetch("/protect", {
          method: "POST",
          body: formData,
        });
        console.log("Response status:", response.status);
        if (response.redirected) {
          console.log("Redirecting to:", response.url);
          window.location.href = response.url; // Следуем редиректу
        } else {
          const text = await response.text();
          console.log("Response body:", text);
          document.body.innerHTML = text; // Если не редирект, рендерим ответ
        }
      } catch (err) {
        console.error("Fetch error:", err);
      }
    });
  </script>
</body>
</html>
